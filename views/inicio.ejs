      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
      margin: 30px auto;
      max-width: 1100px;
    }

    .categoria {
      position: relative;
      width: 250px;
      height: 250px; 
      overflow: hidden;
      border-radius: 12px;
      cursor: pointer;
      flex-shrink: 0;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .categoria:hover {
      transform: scale(1.05);
